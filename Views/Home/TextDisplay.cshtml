
@{
    ViewData["Title"] = "TextDisplay";
}


<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Appraised Textbook</title>
    <link rel="stylesheet" href="~/css/students.css" type="text/css" /> 
</head>
<body>
    <center><h1>Students4CheapTexts' Appraised Textbook List</h1></center>
    <ul>
        <li><a href="~/Home/Index">Home</a></li>
        <li><a href="~/Home/Appraise">Appraise Again</a></li>
        <li><a href="~/Home/TextDisplay">View Textbook</a></li>
    </ul>
    <br/><br/>
    <center><h3>Appraised Textbook List</h3></center>
    <table width="80%" align="center" border="1">
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Version</th>
            <th>Price</th>
            <th>Condition</th>
            <th>Appraised Price</th>
         </tr>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.title</td>
                <td>@i.ISBN</td>
                <td>@i.version</td>
                <td>@i.price</td>
                <td>@i.condition</td>
                <td>@i.appraisalPrice(i.price, i.condition)</td>
            </tr>
        }
    </table>
</body>
</html>
